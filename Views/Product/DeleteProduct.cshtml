@model InventoryManagment.Models.Product

@{
    ViewBag.Title = "DeleteProduct";
}

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Productname")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product_name)
        </dd>

        <dt>
            @Html.DisplayName("Productquant")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product_qnty)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "DisplayProduct", "Product",new {@class ="btn btn-primary"})
        </div>
    }
</div>
